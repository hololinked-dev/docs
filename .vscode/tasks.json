{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Recreate uv virtual environment",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": [
                    "rmdir /s /q .venv &",
                    "uv venv &",
                    "uv sync"
                ]
            },
            "linux": {
                "command": [
                    "rm -rf venv &&",
                    "uv venv &&",
                    "uv sync"
                ]
            },
        },
        {
            "label": "serve with dirty reload",
            "type": "shell",
            "command": "mkdocs serve --dirtyreload",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}